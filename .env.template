# 메인넷 API 키 (메인넷 사용 시 필요)
BINANCE_API_KEY=your_mainnet_api_key
BINANCE_SECRET_KEY=your_mainnet_secret_key

# 테스트넷 API 키 (테스트넷 사용 시 필요)
BINANCE_TEST_API_KEY=your_testnet_api_key
BINANCE_TEST_SECRET_KEY=your_testnet_secret_key

# 테스트넷 사용 여부 (true: 테스트넷, false: 메인넷)
USE_TESTNET=true

# Discord Webhooks
DISCORD_SIGNAL_WEBHOOK=your_signal_webhook_url
DISCORD_TRADE_WEBHOOK=your_trade_webhook_url
DISCORD_ERROR_WEBHOOK=your_error_webhook_url
DISCORD_INFO_WEBHOOK=your_info_webhook_url

# Application Settings
FETCH_INTERVAL=15m
CANDLE_LIMIT=1000

# Symbols Settings
SYMBOLS=BTCUSDT,ETHUSDT            # 콤마로 구분된 심볼 목록, 비어있으면 기본값 사용
USE_TOP_SYMBOLS=false              # true면 거래량 상위 심볼 사용, false면 SYMBOLS 사용
TOP_SYMBOLS_COUNT=3                # 거래량 상위 심볼 개수 (USE_TOP_SYMBOLS=true일 때만 사용)